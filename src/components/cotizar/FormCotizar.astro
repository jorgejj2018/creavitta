<!-- component -->
<div class="p-20 shadow-md w-auto">
    <h2 class="text-2xl font-light mb-4 text-center">Cotizar con Creavitta</h2>

    <form action="#" method="POST">
        <!-- Tipo de Servicio -->
        <div class="mt-4">
            <label for="service" class="block text-sm font-medium text-gray-700">Tipo de Servicio</label>
            <select id="service" name="service" class="mt-1 p-2 w-auto border rounded-md">
                <option disabled selected hidden>Tipo de Servicio</option>
                <option>Diseño de Interiores Residencial</option>
                <option>Diseño de Interiores Comercial</option>
                <option>Consultoría de Diseño</option>
            </select>
        </div>

        <!-- Tamaño del Espacio -->
        <div class="mt-4">
            <label for="size" class="block text-sm font-medium text-gray-700">Tamaño del Espacio (metros cuadrados)</label>
            <input type="number" id="size" name="size" class="mt-1 p-2 w-auto border rounded-md">
        </div>

        <!-- Estilo Preferido -->
        <div class="mt-4">
            <label for="style" class="block text-sm font-medium text-gray-700">Estilo Preferido</label>
            <select id="style" name="style" class="mt-1 p-2 w-auto border rounded-md">
                <option disabled selected hidden>Estilo Preferido</option>
                <option>Moderno</option>
                <option>Clásico</option>
                <option>Minimalista</option>
                <option>Vintage</option>
                <option>Industrial</option>
            </select>
        </div>

        <!-- Presupuesto Estimado -->
        <div class="mt-4">
            <label for="budget" class="block text-sm font-medium text-gray-700">Presupuesto Estimado</label>
            <input type="text" id="budget" name="budget" class="mt-1 p-2 w-auto border rounded-md">
        </div>

        <!-- Fecha de Inicio Deseada -->
        <div class="mt-4">
            <label for="start_date" class="block text-sm font-medium text-gray-700">Fecha de Inicio Deseada</label>
            <input type="date" id="start_date" name="start_date" class="mt-1 p-2 w-auto border rounded-md">
        </div>

        <!-- Nombre -->
        <div class="mt-4">
            <label for="name" class="block text-sm font-medium text-gray-700">Nombre</label>
            <input type="text" id="name" name="name" autocomplete="name" class="mt-1 p-2 w-auto border rounded-md">
        </div>

        <!-- Correo Electrónico -->
        <div class="mt-4">
            <label for="email" class="block text-sm font-medium text-gray-700">Correo Electrónico</label>
            <input type="email" id="email" name="email" autocomplete="email" class="mt-1 p-2 w-auto border rounded-md">
        </div>

        <!-- Número de Teléfono -->
        <div class="mt-4">
            <label for="phone" class="block text-sm font-medium text-gray-700">Número de Teléfono</label>
            <input type="tel" id="phone" name="phone" autocomplete="tel" class="mt-1 p-2 w-auto border rounded-md">
        </div>

        <!-- Comentarios o Detalles Adicionales -->
        <div class="mt-4">
            <label for="message" class="block text-sm font-medium text-gray-700">Comentarios o Detalles Adicionales</label>
            <textarea id="message" name="message" rows="3" class="mt-1 p-2 w-12/12 border rounded-md resize-none"></textarea>
        </div>

        <!-- Botón de cotización -->
        <div class="mt-6 flex justify-center">
            <button type="submit" class="w-8/12 p-3 bg-cyan-700 text-white rounded-md hover:bg-cyan-800">Cotizar</button>
        </div>
    </form>
</div>
